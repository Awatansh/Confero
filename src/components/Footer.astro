<style>
  .footer {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
    border-top: 1px solid var(--color-border);
    margin-top: 6rem;
    padding: 3rem 2rem 2rem;
  }

  html.dark .footer {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .footer-logo {
    color: var(--color-primary);
    margin: 0;
  }

  .footer-tagline {
    color: rgba(0, 0, 0, 0.6);
    margin: 0.5rem 0 0;
  }

  html.dark .footer-tagline {
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-nav a,
  .social-links a {
    color: var(--color-text);
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-nav a:hover,
  .social-links a:hover {
    color: var(--color-primary);
    transform: translateX(4px);
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-icon {
    font-size: 1.2em;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .footer-bottom p {
    color: rgba(0, 0, 0, 0.6);
    margin: 0;
    font-size: 0.9rem;
  }

  html.dark .footer-bottom p {
    color: rgba(255, 255, 255, 0.6);
  }

  .heart {
    color: #ec4899;
    animation: heartbeat 1.5s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0%, 100% { transform: scale(1); }
    10%, 30% { transform: scale(1.1); }
    20%, 40% { transform: scale(1); }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-nav,
    .social-links {
      align-items: center;
    }
  }
</style>
