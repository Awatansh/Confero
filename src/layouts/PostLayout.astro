---
import PageLayout from './PageLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { generateBreadcrumbs, getSpaceTitle } from '../utils/breadcrumbs';

interface Props {
  title: string;
  space: string;
  description?: string;
}

const { title, space, description } = Astro.props;
const breadcrumbs = generateBreadcrumbs(space, title);
const spaceTitle = getSpaceTitle(space);
---

<PageLayout title={title} description={description}>
  <div style="padding: 2rem; max-width: 1000px; margin: 0 auto;">
    <Breadcrumbs items={breadcrumbs} />
    
    <article>
      <slot />
    </article>

    <nav style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid var(--color-border);">
      <a href={`/spaces/${space}`}>‚Üê Back to {spaceTitle}</a>
      <span style="margin: 0 1rem;">|</span>
      <a href="/spaces">View all spaces</a>
    </nav>
  </div>

  <style>
    article {
      max-width: 800px;
      margin: 2rem auto;
    }

    article :global(h1) {
      margin-top: 0;
    }

    article :global(p) {
      line-height: 1.8;
      margin: 1.5rem 0;
    }

    article :global(pre) {
      margin: 2rem 0;
      padding: 1.5rem;
      border-radius: 0.5rem;
    }

    nav {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 0.95rem;
    }

    nav a {
      padding: 0.5rem 1rem;
      border-radius: 0.3rem;
      transition: background-color 0.2s;
    }

    nav a:hover {
      background-color: rgba(0, 0, 0, 0.05);
    }

    html.dark nav a:hover {
      background-color: rgba(255, 255, 255, 0.05);
    }
  </style>
</PageLayout>
